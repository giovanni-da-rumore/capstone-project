    width: 900px;
    margin: auto;
  }

  .user-sidebar {
    float: left;
    width: 200px;
    margin: 20px;
  }


  .user-show-page h1 {
    font-size: 36px;
    display: inline;
    /*width: 150px;*/
    font-weight: bold;
    color: #000;
