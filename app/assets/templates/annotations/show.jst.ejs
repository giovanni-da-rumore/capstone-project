<style>


  .annotation-container {
    border-left: 1px solid #ffc31c;
    padding-left: 10px;

  }

  .annotation-content {
    padding: 10px 0;
    line-height: 1.3;
    font-family: sans-serif;
    font-size: 16px;
    margin-top: <%= topPadding %>px;


  }


.annotation-bottom-bar {
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  margin-bottom: 5px;

}

.annotation-bottom-bar button {
  font-size: 12px;
  padding: 3px;
  border-right: 1px solid #ccc;

}

</style>





<main class="annotation-container group">
<section class="annotation-main-content">

  <section class="annotation-author">
    <!-- insert Description By: author name -->
  </section>

  <section class="annotation-content">
    <%=content %>
  </section>
<section class="annotation-bottom-bar">
  <button class="annotation-edit">Edit</button>
</section>

</main>
