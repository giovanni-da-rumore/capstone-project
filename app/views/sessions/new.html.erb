<style>

.background-holder {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index:0;
}

.sign-in-background {
  width: 100%;
  height: 100%;
  position: absolute;

}


body {
  background: transparent;
}




.entry-form {
  position: absolute;
  top: 100px;
  left: 50%;
  transform: translateX(-35%);
  width: 310px;
  padding: 25px;
  padding-bottom: 20px;
  background: #049100;
  color: #ffc31c;
  margin-top: 220px;
  margin: auto;
  z-index: 1;
  border: 2px solid #3B5E2B;
  border-radius: 5px;
  opacity: 0.95;
}

.entry-form li {
  float: left;
  padding-bottom: 5px;
  width: 300px;
}

.entry-form h2 {
  color: #ffc31c;
  /*font-weight: bold;*/
  font-family: "Sirin Stencil", arial;
  font-size: 26px;
  text-shadow: 1px 1px 2px #3B5E2B;
  text-align: center;
  padding-top: 13px;
  padding-bottom: 5px;
  width: 311px;
}



.entry-form input {
  display: block;
  border: 1px solid #000;
  background: #FFF7DF;
  height: 20px;
  width: 275px;
  border-radius: 5px;
  padding: 5px;
  color: #000;
  margin-top: 5px;
}


.form-propre {
  display: block;
  background: #05ab00;
  padding: 10px;
  margin-top: 5px;
  color: white;
  opacity: 1.0!important;
  width: 290px;
  padding-bottom: 3px;

}


.entry-form label {
  font-size: 17px;
  padding-bottom: 5px;
  text-shadow: 2px 2px 2px #009900;

}

.entry-submit {
  margin: 10px 0px;
  padding: 7px;
  /*border: 2px solid #3B5E2B;*/
  display: inline;
  border-radius: 3px;
  background: #047800;
  text-shadow: 1px 1px 1px #047800;
}

.errors {
  text-align: center;
  font-size: 14px;
  color: blue;
}


.header-logo {
  padding: 14px 10px;
  border-radius: 50%;
  border: 4px solid #009900;
  background: #fff;
  color: #3FBC13;
  box-shadow: 0px 0px 1px black;
  font-size: 36px;
  display: block;
  font-weight: bold;
  vertical-align: center;
  float: left;
  margin-left: 126px;

}


.guest-form {
  float: right;
}


</style>


<main class="entry">

  <div background-holder>
    <img class="sign-in-background" src='<%= asset_path "bruegel_corn.jpg"%>'/>
  </div>


  <%= render "/layouts/entry_header" %>

  <ul class="entry-form group" action="<%=sessions_url%>" method="post">

    <li>
      <h1 class="header-logo">Ëùâ</h1>
    </li>
    <li>
      <h2>SIGN IN</h2>
    </li>
    <li>
      <form class="form-propre" method="post" action="/sessions">
        <div class="errors">
        <%= render "shared/errors" %>
        </div>
        <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
        <label>
          Username
          <input type="text" name="user[username]" value="<%=@user.username%>">
        </label>
        <label>
          Password
          <input type="password" name="user[password]" value="">
        </label>
        <button class="entry-submit">Login</button>
      </form>
    </li>

    <form class="guest-form" action="/sessions" method="post">
      <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
        <input type="hidden" name="user[username]" value="guest">
        <input type="hidden" name="user[password]" value="guestuser">
      </label>
      <button class="entry-submit">Sign in As Guest</button>
    </form>

    </form>

  </ul>
</main>
